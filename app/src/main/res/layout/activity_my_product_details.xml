            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Delete Ad"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>


